MODULE Course;
REQUIRE Subject, Lesson;

CLASS Course 'Курс';
subject = DATA Subject (Course);
nameSubject 'Предмет' (Course c) = name(subject(c));


FORM courses 'Курсы'
    OBJECTS c = Course
    PROPERTIES(c) nameSubject SELECTOR 
    

    OBJECTS l = Lesson
    PROPERTIES(l) READONLY topic, dateTime, nameSubject, nameTutor 
    FILTERS nameSubject(l) == nameSubject(c)
;


